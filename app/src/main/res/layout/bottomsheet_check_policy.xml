<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".presentation.onboarding.SplashActivity"
    android:paddingHorizontal="36dp"
    android:orientation="vertical"
    android:background="@drawable/border_bottom_dialog_white"
    android:paddingBottom="100dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="약관 동의"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:textFontWeight="700"
            android:textColor="@color/black"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/btn_close_tap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_close_24"
            android:foregroundTint="@color/closeGrey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/btn_policy_all_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/border_account" />
        <TextView
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관에 전체 동의합니다"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:textFontWeight="700"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_policy_global"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/border_account"
            />
        <TextView
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관 (필수)"
            android:textColor="@color/black"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:textFontWeight="400"
            android:textSize="14sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_forward_ios"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_policy_personal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/border_account"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 수집 및 이용 (필수)"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:textFontWeight="400"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_forward_ios"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_policy_marketing"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/border_account"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마케팅 정보 수신 (선택)"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            android:textFontWeight="400"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_forward_ios"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/btn_policy_next"
        android:layout_marginTop="40dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음으로"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:textFontWeight="900"
        android:background="@drawable/bt_background_main"
        />



</androidx.appcompat.widget.LinearLayoutCompat>
