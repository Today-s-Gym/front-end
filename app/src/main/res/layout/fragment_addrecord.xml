<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.calendar.AddrecordFragment">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_top"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="11.77dp"
                android:layout_height="20dp"
                android:layout_marginStart="21dp"
                android:src="@drawable/arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/tv_recorddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.01.01"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_completerecord"
                android:layout_width="56dp"
                android:layout_height="31dp"
                android:layout_marginRight="21dp"
                android:background="@drawable/btn_style2"
                android:text="작성"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_useravarta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="21dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_usernickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/iv_useravarta"
                app:layout_constraintBottom_toBottomOf="@id/iv_useravarta"
                app:layout_constraintLeft_toRightOf="@id/iv_useravarta" />
            <EditText
                android:id="@+id/et_recordcontent"
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:background="@drawable/edittext_style"
                android:paddingTop="22.31dp"
                android:paddingLeft="12dp"
                android:paddingBottom="20.43dp"
                android:paddingRight="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:hint="오늘의 운동을 기록해주세요"
                android:textSize="14sp"
                android:gravity="top"
                app:layout_constraintTop_toBottomOf="@id/iv_useravarta"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <LinearLayout
                android:id="@+id/lo_recordcamera"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/outline_box"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:gravity="center_vertical"
                android:foregroundGravity="bottom"
                app:layout_constraintTop_toBottomOf="@id/et_recordcontent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_addpicture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/camerabtn_style">
                    
                    <ImageView
                        android:layout_width="20.83dp"
                        android:layout_height="18.75dp"
                        android:src="@drawable/camera"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_recordpic1"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:visibility="gone"
                    android:layout_marginRight="11dp">
                    <ImageView
                        android:id="@+id/iv_recordpic1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/camerabtn_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_delpic1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/close"
                        android:background="@drawable/image_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_recordpic2"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:visibility="gone"
                    android:layout_marginRight="11dp">
                    <ImageView
                        android:id="@+id/iv_recordpic2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/camerabtn_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_delpic2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/close"
                        android:background="@drawable/image_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_recordpic3"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/iv_recordpic3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/camerabtn_style"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/btn_delpic3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/close"
                        android:background="@drawable/image_style"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태그 추가"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="19dp"
                app:layout_constraintTop_toBottomOf="@id/lo_recordcamera"
                app:layout_constraintLeft_toLeftOf="@id/lo_recordcamera"/>
            <ImageView
                android:id="@+id/btn_addtag"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/add_gray"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/lo_recordcamera"
                app:layout_constraintRight_toRightOf="@id/lo_recordcamera"/>

            <LinearLayout
                android:id="@+id/lo_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/btn_addtag"
                app:layout_constraintStart_toStartOf="@id/lo_recordcamera"
                app:layout_constraintEnd_toEndOf="@id/lo_recordcamera">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_recordtag1"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_recordtag1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style2"
                        android:text="엑스 쵸크"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="9.12dp"
                        android:paddingRight="9.12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="1dp"
                        app:layout_constraintTop_toTopOf="@id/btn_deltag1"
                        app:layout_constraintRight_toRightOf="@id/btn_deltag1"/>
                    <TextView
                        android:id="@+id/btn_deltag1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_deletetag"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_recordtag2"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_recordtag2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style2"
                        android:text="엑스 쵸크"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="9.12dp"
                        android:paddingRight="9.12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="1dp"
                        app:layout_constraintTop_toTopOf="@id/btn_deltag2"
                        app:layout_constraintRight_toRightOf="@id/btn_deltag2"/>
                    <TextView
                        android:id="@+id/btn_deltag2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_deletetag"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_recordtag3"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_recordtag3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_style2"
                        android:text="엑스 쵸크"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="9.12dp"
                        android:paddingRight="9.12dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="1dp"
                        app:layout_constraintTop_toTopOf="@id/btn_deltag3"
                        app:layout_constraintRight_toRightOf="@id/btn_deltag3"/>
                    <TextView
                        android:id="@+id/btn_deltag3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_deletetag"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>